model Invoice {
  id            String   @id @default(uuid())
  date          DateTime
  dueDate       DateTime
  invoiceNumber String   @default(uuid())
  status        Status
  terms         Terms
  taxes         Float
  total         Float
  remarks       String
  createdAt     DateTime
  updatedAt     DateTime @default(now()) @updatedAt

  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String

  company   Company @relation(fields: [companyId], references: [id])
  companyId String

  entry Entry[]
}

model Entry {
  id          String   @id @default(uuid())
  date        DateTime
  description String
  quantity    Float
  rate        Float
  total       Float

  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId String
}

enum Status {
  pending
  draft
  paid
}

enum Terms {
  NET_7
  NET_21
  NET_30
}

